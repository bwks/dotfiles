// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ssh_connections": [
    {
      "host": "ubntv",
      "args": [],
      "projects": [
        {
          "paths": ["/home/bradmin/code/rust/bollardex"]
        },
        {
          "paths": ["/home/bradmin/code/rust/sherpa"]
        }
      ]
    }
  ],
  "vim_mode": true,
  "cursor_blink": false,
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "left"
  },
  "git_panel": {
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "edit_predictions": {
    "enabled_in_text_threads": false
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "enabled": true,
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "model_parameters": []
  },

  "format_on_save": "on",
  "ui_font_family": "Recursive Monospace",
  "telemetry": {
    "metrics": false
  },
  "icon_theme": "Catppuccin Mocha",
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "buffer_font_family": "Recursive Monospace Casual",
  "buffer_font_weight": 600,
  "buffer_font_features": {
    "dlig": true, // Enables standard ligatures
    "liga": true, // Enables standard ligatures
    "calt": true, // Enables contextual alternates
    "ss01": true, // Enables stylistic set 1 (for Recursive alternates)
    "ss02": true // Disables stylistic set 2 (if undesired)
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Frapp√©"
  },
  "project_panel": {
    "dock": "right"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "languages": {
    "Rust": {
      "inlay_hints": {
        "enabled": true
      }
    }
  },
  "terminal": {
    "default_height": 9999,
    "font_family": "Recursive Monospace Casual"
  }
